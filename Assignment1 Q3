
    //Write a program to find sum and average of 3 marks

public class Q3 {
    

    public static void main(String[] args) {
      int mark1 = 97;
      int mark2 = 83;
      int mark3 = 95;
      int sum = mark1 + mark2 + mark3;
      float average = sum / 3;
      System.out.println(average);
    }
  }


  /*
   * OUTPUT:
   * 91.0
   */

